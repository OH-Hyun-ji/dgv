<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hotelDAO">

	<select id="hotelSelect" resultType="HotelVO">
		SELECT * FROM hotel
	</select>
	
	<select id="hotelSelectStatus" resultType="HotelVO">
		select * from hotel where hotel_status=1
	</select>
	
	<select id="hotelDay" resultType="HotelVO">
		select * , EXTRACT(DAY from hotel_date)as day from hotel where hotel_status= 1;
	</select>
</mapper>