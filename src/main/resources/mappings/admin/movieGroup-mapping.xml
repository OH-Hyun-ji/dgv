<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="AdminGroupDAO">
	<insert id="InsertGroup" parameterType="AdminGroupVO">
		INSERT INTO movie_group VALUES(DEFAULT,#{movie_group_name},#{reg_id},current_date)
	</insert>
	
	<select id="GroupList" resultType="AdminGroupVO" >
		SELECT * FROM movie_group;
	</select>
	
	<insert id="InsertActor" parameterType="AdminActorVO">
		INSERT INTO movie_actor(movie_actor_code,movie_actor_name,movie_actor_ename,reg_id,reg_date,movie_actor_birth,movie_actor_nation,movie_actor_info,movie_actor_img)
		VALUES(DEFAULT,#{movie_actor_name},#{movie_actor_ename},#{reg_id},current_date,#{movie_actor_birth},#{movie_actor_nation},#{movie_actor_info},#{movie_actor_img})
	</insert>
	
	<select id="ActorList" resultType="AdminActorVO">
		SELECT * FROM movie_actor
	</select>
</mapper>